@model List<Entities.Concrete.ToDoListModel>
@{
    ViewData["Title"] = "Home";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<script src="~/twitter-bootstrap/js/bootstrap.js"></script>
<script src="~/jquery/dist/jquery.js"></script>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="~/StyleFolder/Style.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="row justify-content-center">
        <h2 class="text-center mt-2">To Do List</h2>
        <div class="col-12">
            <div class="text-center mt-2 mt-lg-3">
                <a class="btn btn-success shadow-none" id="workAdd" data-bs-toggle="collapse" href="#TaskArea" role="button" aria-expanded="false" aria-controls="TaskArea">
                    Görev Ekle
                </a>
            </div>
            <div class="collapse mt-3" id="TaskArea">
                <div class="card card-body cardAdd">
                    <span class="badge badge-light p-2" style="font-size:1.5rem;">Görev Ayarları</span>
                    <hr />
                    <div class="row justify-content-center">
                        <div class="col-12 col-md-6">
                            <input type="text" class="form-control shadow-none" id="txtTitle" maxlength="100" placeholder="Görev Başlığı" />
                            <textarea class="form-control mt-1 shadow-none" id="txtDescription" maxlength="1000" rows="5" placeholder="Görev içeriğinizi yazınız..."></textarea>
                        </div>
                        <div class="col-12 col-md-3">
                            <table>
                                <tr>
                                    <td></td>
                                    <td class="p-2">
                                        <input type="checkbox" id="checkboxToday" style="transform:scale(1.9);" />
                                        <span class="badge badge-info p-2 ml-2" style="font-size:1rem;">Bugüne Ekle</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="float-right p-2">Başlangıç Tarihi</td>
                                    <td><input type="date" class="form-control" id="startDate"></td>
                                </tr>
                                <tr>
                                    <td class="float-right p-2">Bitiş Tarihi</td>
                                    <td><input type="date" value="2021-10-10" class="form-control" id="endDate"></td>
                                </tr>
                                <tr>
                                    <td class="p-2"></td>
                                    <td>
                                        <input type="button" id="btnSave" class="btn btn-warning form-control mt-2" value="Görev Kaydet" />
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <div class="card card-body cardList">
                    <div class="col-12 col-md-3">
                        <div class="text-center mt-2 mt-lg-3">
                            <a class="btn btn-outline-info shadow-none" id="workAdd" data-bs-toggle="collapse" href="#FilterArea" role="button" aria-expanded="false" aria-controls="FilterArea  ">
                                Filtre Aç/Kapat
                            </a>
                        </div>
                        <div class="collapse mt-3" id="FilterArea">
                            <table>
                                <tr>
                                    <td class="float-right p-2">Başlangıç Tarihi</td>
                                    <td><input type="date" class="form-control" id="startDateFilter"></td>
                                </tr>
                                <tr>
                                    <td class="float-right p-2">Bitiş Tarihi</td>
                                    <td><input type="date" value="2021-10-10" class="form-control" id="endDateFilter"></td>
                                </tr>
                                <tr>
                                    <td class="p-2"></td>
                                    <td>
                                        <input type="button" id="btnFilter" class="btn btn-outline-success form-control mt-2" value="Filtrele" />
                                    </td>
                                </tr>
                            </table>
                        </div>

                    </div>

                    <div class="col-12 mt-2 table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <td></td>
                                    <td>Id</td>
                                    <td class="w-25">Başlık</td>
                                    <td class="w-25">Açıklama</td>
                                    <td>Başlangıç Tarihi</td>
                                    <td>Bitiş Tarihi</td>
                                    <td>Durumu</td>
                                </tr>
                            </thead>
                            <tbody class="mt-1" id="tableBody"></tbody>
                        </table>
                        <div class="display-6 text-center" style="display:none;" id="objectNull"> Henüz Hayıtlı Göreviniz Bulunmamaktadır</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/JavascriptFolder/JavaScript.js"></script>
